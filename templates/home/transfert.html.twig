{% extends 'base.html.twig' %}

    {% block title %} {{ titre_page }} {% endblock %}

{% block body %}
    {{ include('partials/_navbar.html.twig') }}

    <div class="container mt-5 mb-5">
        <div class="row">
            {% if transferts is empty %}
            <div class="alert alert-info" role="alert">
                Aucun transfert n'est disponible pour le moment
            </div>
            {% else %}
            {% for transfert in transferts %}

            <div class="col-md-6 col-lg-3 mb-5">
                <div class="card-wrapper">
                    <div class="content">

                        <div class="face-front z-depth-2">
                            <img class="bd-placeholder-img card-img-top" width="150px" height="250px" src="{{ asset('images/prestations/') }}{{ transfert.imageName }}" alt="{{ transfert.titre }}">

                            <div class="card-body">
{#                                <h4 class="font-weight-bold">{{ transfert.titre }}</h4><hr>#}
                                <p class="font-weight-bold">{{ transfert.titre }}</p>
                                <p class="font-weight-bold">{{ transfert.prix }} €</p>
                                <p class="text-right text-secondary"><i class="fas fa-undo-alt"></i></p>
                            </div>
                        </div>

                        <div class="face-back z-depth-2 bg-secondary text-white">

                            <div class="card-body">
                                <h4 class="font-weight-bold">Détail</h4>
                                <hr>
                                <p>{{ transfert.description | raw}}</p>
                                <hr>
                                <a href="{{ path('panier_ajouter', {id:transfert.id, slug:transfert.slug}) }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter au panier</a>
{#                                <button class="btn btn-danger">Ajouter au panier</button>#}
{#                                <a href="{{ path('panier_ajouter', {id:transfert.id, slug:transfert.slug}) }}" class="">ajouter au panier</a>#}

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            {% endfor %}
            {% endif %}
        </div>
    </div>

    {{ include('partials/_footer.html.twig') }}
{% endblock %}


