<div class="form-widget">
    {% for image in field.value %}
        <a href="#" class="ea-lightbox-thumbnail small" data-featherlight="#ea-lightbox-{{image.id}}"
           data-featherlight-close-on-click="anywhere">
                <img class="img-fluid" src="/images/prestations/{{image.imageName}}" alt="{{image.imageName}}" width="150">
        </a>
        <div id="ea-lightbox-{{image.id}}" class="ea-lightbox">
                <img class="img-fluid" src="/images/prestations/{{image.imageName}}" alt="" width="150">
        </div>
        {% endfor %}
</div>